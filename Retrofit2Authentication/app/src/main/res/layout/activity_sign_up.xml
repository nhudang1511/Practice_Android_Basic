<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:background="#f8eeec">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/top_background2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >
                <TextView
                    android:id="@+id/title"
                    android:layout_width="242dp"
                    android:layout_height="0dp"
                    android:text="Create Account"
                    android:textSize="38sp"
                    android:textStyle="bold"
                    android:textColor="#3b608c"
                    android:layout_weight="80"
                    android:layout_marginBottom="20dp"/>
                <EditText
                    android:id="@+id/usernameEdt"
                    android:textColor="#3b608c"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="44"
                    android:hint="Username"
                    android:textColorHint="#3b608c"
                    android:textSize="20sp"
                    android:drawableLeft="@drawable/name"
                    android:drawablePadding="8dp"/>
                <EditText
                    android:id="@+id/passwordEdt"
                    android:textColor="#3b608c"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="44"
                    android:hint="Password"
                    android:textColorHint="#3b608c"
                    android:textSize="20sp"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="8dp"/>
                <EditText
                    android:id="@+id/emailEdt"
                    android:textColor="#3b608c"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="44"
                    android:hint="Email"
                    android:textColorHint="#3b608c"
                    android:textSize="20sp"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="8dp"/>
                <EditText
                    android:id="@+id/genderEdt"
                    android:textColor="#3b608c"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="44"
                    android:hint="Gender"
                    android:textColorHint="#3b608c"
                    android:textSize="20sp"
                    android:drawableLeft="@drawable/name"
                    android:drawablePadding="8dp"/>                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"/>
                    <ImageButton
                        android:id="@+id/submitBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:src="@drawable/btn_arrow2"
                        android:padding="16dp"
                        android:background="#00FFFFFF"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/signInTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have account? Sign in now!"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#3b608c"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>